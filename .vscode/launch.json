{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug",
      "type": "node",
      "preLaunchTask": "build",
      "request": "launch",
      "program": "${workspaceFolder}/dist/src/main.js",
      "sourceMaps": true,
      "smartStep": true,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "name": "mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/_mocha",
      "preLaunchTask": "build",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "'${workspaceFolder}/dist/tests/*.spec.js'"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
